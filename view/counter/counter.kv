<CounterScreenView>:
    MDBoxLayout:
        md_bg_color: app.theme_cls.bg_normal

    MDBoxLayout:
        size_hint_y: .21
        spacing: 20
        padding: 10
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"top": 1}
        orientation: "horizontal"

    MDIconButton:
        icon: "arrow-left"
        icon_size: "20dp"
        size_hint: None, None
        size: (45, 45)
        icon_color: 1, 1, 1, 1
        user_font_size: '12sp'
        theme_text_color: "Custom"
        #text_color: app.theme_cls.primary_color
        pos_hint: {'center_x': .09, 'center_y': .96}
        on_release:
            app.change_screen("home")

    MDLabel:
        # id: counter_title
        text: "Population Counter"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'left'
        font_size: '16sp'
        font_name: "fonts/Poppins-SemiBold.ttf"
        color: "white"
        pos_hint: {'center_x': .65, 'center_y': .96}
        bold: True

    MDTextButton:
        text: "Setup"
        font_size: "11sp"
        color: 1, 1, 1, 1
        size_hint: .15, .2
        font_name: "fonts/Poppins-Regular.ttf"
        pos_hint: {"center_x": .93, "center_y": .96}
        bold: True
        on_release:
            app.setup_program_dialog()

    MDLabel:
        id: counter
        text: "0"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'center'
        font_size: '25sp'
        #font_name: "fonts/Poppins-SemiBold.ttf"
        color: "white"
        pos_hint: {'center_x': .4, 'center_y': .89}
        bold: True

    MDLabel:
        text: "Total Count"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'center'
        font_size: '10sp'
        font_name: "fonts/Poppins-SemiBold.ttf"
        color: "white"
        pos_hint: {'center_x': .4, 'center_y': .85}
        bold: True

# ======================================================================================================================
    MDBoxLayout:
        size_hint: .25, .04
        padding: [5, 0, 5, 0]
        radius: [5]
        pos_hint: {'center_x': 0.8, 'center_y': 0.84}
        # md_bg_color: app.theme_cls.primary_color

        TextInput:
            id: set_date
            text: ""
            hint_text: "MM-DD-YYYY"
            size_hint: .98, None
            pos_hint: {"center_x": .46, 'center_y': .5}
            height: self.minimum_height
            multiline: False
            cursor_width: "2sp"
            font_size: "9sp"
            font_name: "fonts/Poppins-Regular.ttf"
            foreground_color: "white"
            background_color: 0, 0, 0, 0
            readonly: True
            #on_text: app.validate_hospital_id(*args)
            #on_focus: app.validate_when_focus(*args)

    MDIconButton:
        id: date_picker
        icon: "images/pick_date.png"
        icon_size: "13dp"
        size_hint: None, None
        size: (45, 45)
        icon_color: 1, 1, 1, 1
        user_font_size: '12sp'
        theme_text_color: "Custom"
        #text_color: app.theme_cls.primary_color
        pos_hint: {'center_x': .94, 'center_y': .84}
        on_release:
            root.show_date_picker()

