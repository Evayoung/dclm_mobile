<SignupScreenView>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background.png'

    MDBoxLayout:
        md_bg_color: 0, 0, 0, .7
        orientation: 'vertical'
        spacing: 20
        padding: 20



    MDBoxLayout:
        size_hint: .8, .065
        padding: [10, 0, 20, 0]
        radius: [10]
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}
        #md_bg_color: app.theme_cls.accent_color
        canvas.before:
            Color:
                rgb: 204/255, 204/255, 204/255
            Line:
                width: 0.5
                rounded_rectangle: self.x, self.y, self.width, self.height, 8, 8, 8, 8, 100

        TextInput:
            id: user_email
            text: ''
            hint_text: "Enter registered email..."
            size_hint: .88, None
            pos_hint: {"center_x": .46, 'center_y': .5}
            height: self.minimum_height
            multiline: False
            cursor_width: "2sp"
            font_size: "12sp"
            font_name: "fonts/Poppins-Regular.ttf"
            foreground_color: 204/255, 204/255, 204/255
            background_color: 0, 0, 0, 0
            #read_only: True
            on_text: app.clear_reg_form(False)
            #on_focus: app.validate_when_focus(*args)

        MDTextButton:
            text: "Get Details"
            font_name: "fonts/Poppins-Regular.ttf"
            font_size: "12sp"
            color: 1, 1, 1, 1
            pos_hint: {"center_x": .7, "center_y": .5}
            on_release:
                app.get_user_details(data=user_email.text)



    MDBoxLayout:
        size_hint: .8, .065
        padding: [10, 0, 20, 0]
        radius: [10]
        pos_hint: {'center_x': 0.5, 'center_y': 0.63}
        #md_bg_color: app.theme_cls.accent_color
        canvas.before:
            Color:
                rgb: 204/255, 204/255, 204/255
            Line:
                width: 0.5
                rounded_rectangle: self.x, self.y, self.width, self.height, 8, 8, 8, 8, 100

        TextInput:
            id: user_id
            text: ''
            hint_text: "User ID"
            size_hint: .88, None
            pos_hint: {"center_x": .46, 'center_y': .5}
            height: self.minimum_height
            multiline: False
            cursor_width: "2sp"
            font_size: "12sp"
            font_name: "fonts/Poppins-Regular.ttf"
            foreground_color: 204/255, 204/255, 204/255
            background_color: 0, 0, 0, 0
            readonly: True
            #on_text: app.validate_hospital_id(*args)
            #on_focus: app.validate_when_focus(*args)


    MDBoxLayout:
        size_hint: .8, .065
        padding: [10, 0, 20, 0]
        radius: [10]
        pos_hint: {'center_x': 0.5, 'center_y': 0.54}
        #md_bg_color: app.theme_cls.accent_color
        canvas.before:
            Color:
                rgb: 204/255, 204/255, 204/255
            Line:
                width: 0.5
                rounded_rectangle: self.x, self.y, self.width, self.height, 8, 8, 8, 8, 100

        TextInput:
            id: user_name
            text: ''
            hint_text: "Name"
            size_hint: .88, None
            pos_hint: {"center_x": .46, 'center_y': .5}
            height: self.minimum_height
            multiline: False
            cursor_width: "2sp"
            font_size: "12sp"
            font_name: "fonts/Poppins-Regular.ttf"
            foreground_color: 204/255, 204/255, 204/255
            background_color: 0, 0, 0, 0
            #read_only: True
            #on_text: app.validate_hospital_id(*args)
            #on_focus: app.validate_when_focus(*args)


    MDBoxLayout:
        size_hint: .8, .065
        padding: [10, 0, 15, 0]
        radius: [10]
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        #md_bg_color: app.theme_cls.accent_color
        canvas.before:
            Color:
                rgb: 204/255, 204/255, 204/255
            Line:
                width: 0.5
                rounded_rectangle: self.x, self.y, self.width, self.height, 8, 8, 8, 8, 100

        TextInput:
            id: user_phone
            text: ''
            hint_text: "Phone"
            size_hint: .8, None
            pos_hint: {"center_x": .46, 'center_y': .5}
            height: self.minimum_height
            multiline: False
            cursor_width: "2sp"
            font_size: "12sp"
            font_name: "fonts/Poppins-Regular.ttf"
            foreground_color: 204/255, 204/255, 204/255
            background_color: 0, 0, 0, 0
