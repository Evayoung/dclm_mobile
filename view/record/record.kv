<RecordScreenView>:
    MDBoxLayout:
        md_bg_color: app.theme_cls.bg_normal

    MDBoxLayout:
        size_hint_y: .14
        spacing: 20
        padding: 10
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"top": 1}
        orientation: "horizontal"

    MDIconButton:
        icon: "arrow-left"
        icon_size: "20dp"
        size_hint: None, None
        size: (45, 45)
        icon_color: 1, 1, 1, 1
        user_font_size: '12sp'
        theme_text_color: "Custom"
        #text_color: app.theme_cls.primary_color
        pos_hint: {'center_x': .09, 'center_y': .96}
        on_release:
            app.change_screen("home")
            app.remove_screen_4rm_list()

    MDLabel:
        id: record_title
        text: "Registration Form"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'left'
        font_size: '16sp'
        font_name: "fonts/Poppins-SemiBold.ttf"
        color: "white"
        pos_hint: {'center_x': .65, 'center_y': .96}
        bold: True



    MDTextButton:
        text: "Setup"
        font_size: "11sp"
        color: 1, 1, 1, 1
        size_hint: .15, .2
        font_name: "fonts/Poppins-Regular.ttf"
        pos_hint: {"center_x": .93, "center_y": .96}
        bold: True
        on_release:
            app.setup_program_dialog()


    MDCheckbox:
        id: convert_click
        group: "type"
        size_hint: None, None
        size: "45dp", "45dp"
        color_active: "white"
        color_inactive: "white"
        pos_hint: {"center_x": .1, "center_y": .89}
        on_press:
            app.add_salvation(self, self.active)

    MDLabel:
