        pos_hint: {"center_x": .2, "center_y": .89}
        font_name: "fonts/Poppins-Regular.ttf"
        font_size: "11dp"
        color: "white"
        halign: "center"
        bold: True
        #color:  app.theme_cls.primary_color

    MDCheckbox:
