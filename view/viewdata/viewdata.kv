<ViewdataScreenView>:
    MDBoxLayout:
        md_bg_color: app.theme_cls.bg_normal

    MDBoxLayout:
        size_hint_y: .14
        spacing: 20
        padding: 10
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"top": 1}
        orientation: "horizontal"

    MDIconButton:
        icon: "arrow-left"
        icon_size: "20dp"
        size_hint: None, None
        size: (45, 45)
        icon_color: 1, 1, 1, 1
        user_font_size: '12sp'
        theme_text_color: "Custom"
        #text_color: app.theme_cls.primary_color
        pos_hint: {'center_x': .09, 'center_y': .96}
        on_release:
            app.change_screen("home")
            app.remove_screen_4rm_list()

    MDLabel:
        id: viewdata_title
        text: "Data not submitted"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'left'
        font_size: '16sp'
        font_name: "fonts/Poppins-SemiBold.ttf"
        color: "white"
        pos_hint: {'center_x': .65, 'center_y': .96}
        bold: True

    MDLabel:
        text: "Counts"
        pos_hint: {"center_x": .24, "center_y": .89}
        font_name: "fonts/Poppins-Regular.ttf"
        font_size: "11dp"
        color: "white"
        halign: "center"
        bold: True
        #color:  app.theme_cls.primary_color

    MDCheckbox:
        id: counts
        group: "type"
        size_hint: None, None
        size: dp(48), dp(48)
        active: True
        color_active: '#b3b3b3'
        color_inactive: '#b3b3b3'
        pos_hint: {"center_x": .35, "center_y": .89}
        on_active: app.get_all_counts(*args)

    MDLabel:
        text: "Registration"
        pos_hint: {"center_x": .65, "center_y": .89}
        font_name: "fonts/Poppins-Regular.ttf"
        font_size: "11dp"
        color: "white"
        halign: "center"
        bold: True
        #color:  app.theme_cls.primary_color

    MDCheckbox:
        id: reg
        group: "type"
        size_hint: None, None
        size: dp(48), dp(48)
        active: True
        color_active: '#b3b3b3'
        color_inactive: '#b3b3b3'
        pos_hint: {"center_x": .8, "center_y": .89}
        on_active: app.get_all_reg(*args)

    MDBoxLayout:
        id: pending_data_list
        size_hint: 1, .85
        padding: [15, 10, 15, 10]
        pos_hint: {"center_x": .5, "center_y": .44}
        orientation: "horizontal"

        ScrollView:
            MDList:
                spacing: 10
                id: pending_item_list

    MDFloatLayout:
        size_hint_y: .085
        spacing: 20
        padding: 10
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"y": 0}
        orientation: "horizontal"

        MDLabel:
            id: total_marked
            text: "0"
            size: self.texture_size
            #theme_text_color: 'Custom'
            halign: 'center'
            font_size: '17sp'
            font_name: "fonts/Poppins-Medium.ttf"
            color: "white"
            pos_hint: {'center_x': .36, 'center_y': .5}
            # bold: True

        MDLabel:
            text: "Marked "
            size: self.texture_size
            #theme_text_color: 'Custom'
            halign: 'center'
            font_size: '12sp'
            font_name: "fonts/Poppins-Medium.ttf"
            color: "white"
            pos_hint: {'center_x': .5, 'center_y': .5}
            # bold: True


        MDTextButton:
            text: "Submit"
            font_size: "12sp"
            font_name: "fonts/Poppins-Medium.ttf"
            color: 1, 1, 1, 1
            # size_hint_y: .9
            pos_hint: {"center_x": .8, "center_y": .5}
            on_release:
                app.get_and_post_data(counts, reg)






