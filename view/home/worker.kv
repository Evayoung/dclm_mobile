<HomeScreenView>:
    MDBoxLayout:
        md_bg_color: app.theme_cls.bg_normal

    MDBoxLayout:
        size_hint_y: .59
        spacing: 20
        padding: 10
        radius: [0, 0, 25, 25]
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"top": 1}
        orientation: "horizontal"

        Image:
            id: img
            pos_hint: {'center_x': .08, 'center_y': .96}
            source: 'images/dclm.png'
            size_hint_x: .3

        MDBoxLayout:
            size_hint: .5, .13
            padding: [0, 10, 0, 10]
            pos_hint: {"center_y": .8}
            orientation: "vertical"
            # md_bg_color: app.theme_cls.bg_normal

            MDLabel:
                id: user_fname_label
                text: "Hello!"
                size: self.texture_size
                #theme_text_color: 'Custom'
                halign: 'left'
                font_size: '14sp'
                font_name: "fonts/Poppins-SemiBold.ttf"
                color: 'white'
                #pos_hint: {'center_x': .5, 'center_y': .6}
                bold: True

            MDLabel:
                id: other_name_label
                text: "Micheal Babawale"
                size: self.texture_size
                #theme_text_color: 'Custom'
                halign: 'left'
                font_size: '10sp'
                font_name: "fonts/Poppins-Regular.ttf"
                color: 'white'
                #pos_hint: {'center_x': .5, 'center_y': .6}
                bold: True


        MDBoxLayout:
            size_hint: .27, .6
            pos_hint: {"center_y": .9 }
            padding: [10, 0, 0, 0]
            orientation: "horizontal"
            spacing: 30
            #md_bg_color: app.theme_cls.bg_normal

            MDTextButton:
                text: "Logout"
                font_size: "10sp"
                font_name: "fonts/Poppins-Regular.ttf"
                color: 1, 1, 1, 1
                pos_hint: {"center_x": .9, "center_y": .5}
                on_release:
                    app.confirm_logout_dialog()

            MDIconButton:
                id: menu_btn
                icon: 'dots-vertical'
                size_hint: None, None
                icon_size: "15dp"
                size: (45, 45)
                icon_color: 1, 1, 1, 1
                user_font_size: '12sp'
                theme_text_color: "Custom"
                #text_color: app.theme_cls.primary_color
                pos_hint: {'center_x': .98, 'center_y': .5}
                on_release:
                    app.menu_dropdown()

    MDLabel:
        text: "Deeper Life Bible Church"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'center'
        font_size: '14sp'
        font_name: "fonts/Poppins-SemiBold.ttf"
        color: "white"
        pos_hint: {'center_x': .5, 'center_y': .83}
        bold: True

    MDLabel:
        id: location_name
        text: "Lajolo, Ilorin Kwara State"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'center'
        font_size: '11sp'
        font_name: "fonts/Poppins-Regular.ttf"
        color: "white"
        pos_hint: {'center_x': .5, 'center_y': .8}
        bold: True

    MDLabel:
        id: population_average
        text: "130"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'center'
        font_size: '25sp'
        font_name: "fonts/Poppins-SemiBold.ttf"
        color: "white"
        pos_hint: {'center_x': .5, 'center_y': .68}
        bold: True

    MDLabel:
        text: "Population Average"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'center'
        font_size: '11sp'
        font_name: "fonts/Poppins-Regular.ttf"
        color: "white"
        pos_hint: {'center_x': .5, 'center_y': .64}
        bold: True

    MDBoxLayout:
        size_hint: .25, .12
        padding: [3, 3, 3, 6]
        spacing: 5
        pos_hint: {'center_x': .2, 'center_y': .5}
        orientation: "vertical"
        #md_bg_color: app.theme_cls.primary_color
        Category:
            radius: 7
            shadow_softness: 14
            elevation: 1
            ripple_behavior:  True
            size: .8, .7
            md_bg_color: "white"

            MDLabel:
                id: crusade_count
                halign: 'center'
                text: "200"
                pos_hint: {'center_x': .5, 'center_y': .5}
                font_size: '16sp'
                font_name: "fonts/Poppins-SemiBold.ttf"
                color: app.theme_cls.primary_color
                bold: True

        MDLabel:
            text: "SWS"
            size_hint: None, None
            height: 15
            pos_hint: {'center_x': .5}
            halign: 'center'
            font_size: '11sp'
            font_name: "fonts/Poppins-Medium.ttf"
            color: "white"
            bold: True


    MDBoxLayout:
        size_hint: .25, .12
        padding: [3, 3, 3, 6]
        spacing: 5
        pos_hint: {'center_x': .5, 'center_y': .5}
        orientation: "vertical"
        #md_bg_color: app.theme_cls.primary_color
        Category:
            radius: 7
            shadow_softness: 14
            elevation: 1
            ripple_behavior:  True
            size: .8, .7
            md_bg_color: "white"
            MDLabel:
                id: retreat_count
                halign: 'center'
                text: "146"
                pos_hint: {'center_x': .5, 'center_y': .5}
                font_size: '16sp'
                font_name: "fonts/Poppins-SemiBold.ttf"
                color: app.theme_cls.primary_color
                bold: True

        MDLabel:
            text: "MBS"
            size_hint: None, None
            height: 15
            pos_hint: {'center_x': .5}
            halign: 'center'
            font_size: '11sp'
            font_name: "fonts/Poppins-Medium.ttf"
            color: "white"
            bold: True

    MDBoxLayout:
        size_hint: .25, .12
        padding: [3, 3, 3, 6]
        spacing: 5
        pos_hint: {'center_x': .8, 'center_y': .5}
        orientation: "vertical"
        #md_bg_color: app.theme_cls.primary_color
        Category:
            radius: 7
            shadow_softness: 14
            elevation: 1
            ripple_behavior:  True
            size: .8, .7
            md_bg_color: "white"
            MDLabel:
                id: program_count
                halign: 'center'
                text: "257"
                pos_hint: {'center_x': .5, 'center_y': .5}
                font_size: '16sp'
                font_name: "fonts/Poppins-SemiBold.ttf"
                color: app.theme_cls.primary_color
                bold: True

        MDLabel:
            text: "TRH"
            size_hint: None, None
            height: 15
            pos_hint: {'center_x': .5}
            halign: 'center'
            font_size: '11sp'
            font_name: "fonts/Poppins-Medium.ttf"
            color: "white"
            bold: True


    MDLabel:
        text: "Recent Activities"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'left'
        font_size: '12sp'
        font_name: "fonts/Poppins-SemiBold.ttf"
        color: app.theme_cls.primary_color
        pos_hint: {'center_x': .55, 'center_y': .31}
        bold: True

    MDBoxLayout:
        id: pending_data_list
        size_hint: 1, .3
        padding: [15, 10, 15, 10]
        pos_hint: {"center_x": .5, "center_y": .15}
        orientation: "horizontal"
        # md_bg_color: app.theme_cls.primary_color

        ScrollView:
            MDList:
                spacing: 10
                id: pending_list
                CardItem:
