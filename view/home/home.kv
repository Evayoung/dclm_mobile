<HomeScreenView>:
    MDBoxLayout:
        md_bg_color: app.theme_cls.bg_normal

    MDBoxLayout:
        size_hint_y: .905
        spacing: 20
        padding: 10
        radius: [0, 0, 25, 25]
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"top": 1}
        orientation: "horizontal"


    Image:
        id: img
        pos_hint: {'center_x': .09, 'center_y': .94}
        source: 'images/user_pics.png'
        size_hint_x: .1

    MDLabel:
        id: user_id
        text: ""
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'left'
        font_size: '11sp'
        font_name: "fonts/Poppins-Regular.ttf"
        color: "#F1B20B"
        pos_hint: {'center_x': .68, 'center_y': .96}
        bold: True

    MDLabel:
        id: user_nam
        text: ""
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'left'
        font_size: '12sp'
        font_name: "fonts/Poppins-Medium.ttf"
        color: "#b3b3b3"
        pos_hint: {'center_x': .68, 'center_y': .935}
        # bold: True

    MDLabel:
        id: user_typ
        text: ""
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'left'
        font_size: '11sp'
        font_name: "fonts/Poppins-Medium.ttf"
        color: "#b3b3b3"
        pos_hint: {'center_x': .68, 'center_y': .91}


    MDIconButton:
        icon: 'cog-outline'
        icon_size: "20dp"
        size_hint: None, None
        size: (40, 40)
        icon_color: 1, 1, 1, 1
        user_font_size: '10sp'
        theme_text_color: "Custom"
        #text_color: app.theme_cls.primary_color
        pos_hint: {'center_x': .9, 'center_y': .95}
        on_release:
            app.change_screen("settings")
            app.add_screen_2list("home")

    MDLabel:
        id: today_date
        text: ""
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'right'
        font_size: '11sp'
        font_name: "fonts/Poppins-Regular.ttf"
        color: "#F1B20B"
        pos_hint: {'center_x': .45, 'center_y': .88}
        bold: True



    Category:
        id: cat
        radius: 15
        shadow_softness: 14
        elevation: 2
        ripple_behavior:  True
        size_hint: .94, .27
        md_bg_color: "gray"
        pos_hint: {"center_x": .5, "center_y": .71}
        #on_release:
            #app.setup_program_dialog()

        MDBoxLayout:
            size_hint: 1, 1
            padding: 2
            radius: [15,]
            md_bg_color: 'black'
            pos_hint: {"center_x": .5, "center_y": .5}
            orientation: "horizontal"

            FitImage:
                id: disp_pics
                radius: cat.radius
                size_hint_x: 1
                # width: root.height-10


    MDLabel:
        id: user_name
        text: "D C L M"
        size: self.texture_size
        #theme_text_color: 'Custom'
        halign: 'left'
        font_size: '16sp'
        font_name: "fonts/Poppins-SemiBold.ttf"
        color: "#b3b3b3"
        pos_hint: {'center_x': .55, 'center_y': .53}
        # bold: True

    MDLabel:
